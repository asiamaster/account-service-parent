<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dili.account.dao.ICardStorageDao">
	
	<select id="selectList" resultType="com.dili.account.entity.CardStorageDo">
		SELECT
			`id`, 
			`device_id`, 
			`card_no`, 
			`type`, 
			`verify_code`, 
			`maker_version`, 
			`state`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`create_time`, 
			`modify_time`
		FROM
			account_card_storage
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO account_card_storage (
			`device_id`, 
			`card_no`, 
			`type`, 
			`verify_code`, 
			`maker_version`, 
			`state`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`create_time`, 
			`modify_time`
		)
		VALUES (
			#{deviceId}, 
			#{cardNo}, 
			#{type}, 
			#{verifyCode}, 
			#{makerVersion}, 
			#{state}, 
			#{creatorId}, 
			#{creator}, 
			#{firmId}, 
			#{firmName}, 
			#{createTime}, 
			#{modifyTime}
		)
	</insert>
	
	<select id="getById" resultType="com.dili.account.entity.CardStorageDo">
		SELECT
			`id`, 
			`device_id`, 
			`card_no`, 
			`type`, 
			`verify_code`, 
			`maker_version`, 
			`state`, 
			`creator_id`, 
			`creator`, 
			`firm_id`, 
			`firm_name`, 
			`create_time`, 
			`modify_time`
		FROM
			account_card_storage
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE account_card_storage
	 	<set>
			<if test="deviceId != null">`device_id` = #{deviceId}, </if>
			<if test="cardNo != null">`card_no` = #{cardNo}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="verifyCode != null">`verify_code` = #{verifyCode}, </if>
			<if test="makerVersion != null">`maker_version` = #{makerVersion}, </if>
			<if test="state != null">`state` = #{state}, </if>
			<if test="creatorId != null">`creator_id` = #{creatorId}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="firmId != null">`firm_id` = #{firmId}, </if>
			<if test="firmName != null">`firm_name` = #{firmName}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			account_card_storage
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>